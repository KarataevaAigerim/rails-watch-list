<div class="position-relative">
  <h1><%= @list.name %></h1>
</div>

  <% @bookmarks.each do |bookmark| %>
<div class="">
    <h3>
      <%= bookmark.movie.title %>
    </h3>
     <p> <%= bookmark.movie.overview %> </p>
      <%= image_tag bookmark.movie.poster_url, height: 300, width: 500 %>
     <p> <%= bookmark.movie.rating %> </p>
      <%= link_to "Delete bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "You're persistently deleting this order, proceed?"} %>
</div>
  <% end %>

  <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Back", lists_path, class: "btn btn-primary" %>

